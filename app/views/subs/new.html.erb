<h3>Create Sub</h3>

<form action="/subs" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Title
    <input type="text" name="sub[title]">
  </label>

  <br>

  <label>Description
    <textarea name="sub[description]" rows="8" cols="80"></textarea>
  </label>

  <input type="submit" value="Create Sub!">

</form>
