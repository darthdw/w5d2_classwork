<h4>Add Comment</h4>

<form action="<%=comment_url(sub)%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

  <label>Comment
    <label>Title
      <input type="text" name="comment[title]">
    </label>
    <label>URL
      <input type="text" name="comment[url]">
    </label>
    <textarea name="comment[content]" rows="8" cols="80"></textarea>
  </label>

</form>
